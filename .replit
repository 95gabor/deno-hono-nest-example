run = [
    "deno",
    "run",
    "--lock=deno.lock",
    "--frozen",
    "--allow-read",
    "--allow-env",
    "--allow-net",
    "src/main.ts"
]

hidden = [".deno"]

entrypoint = "src/main.ts"

[languages.deno]
pattern = "**/*.{ts,js}"
[languages.deno.languageServer]
start = ["deno", "lsp"]
[languages.deno.languageServer.initializationOptions]
enable = true
lint = true

[env]
DENO_DIR = "/home/runner/${REPL_SLUG}/.deno"

[nix]
channel = "stable-24_11"

[deployment]
run = [
    "deno",
    "run",
    "--lock=deno.lock",
    "--allow-read",
    "--allow-env",
    "--allow-net",
    "src/main.ts",
]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 8080
externalPort = 80
